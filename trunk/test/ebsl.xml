<?xml version="1.0"?>
<!--
  This is a jEdit mode for the Envision-Based Software Language
  used by Datatel Inc.
  It was created to conform to the Envision Basic Commands Reference
  dated April 24, 2000 applying to Envision Release 4.6
  
  This mode has been tested against jEdit 4.1 final
  
  Last update: Mon Jul 07 15:14:01 EDT 2003 @843 /Internet Time/
  
  This file is maintained by Ian Lewis. Changes and comments/suggestions
  should be submitted to iml@datatel.com
  
  Issues:
    * Some keywords, listed below in KEYWORD2 tags are highlighted even
      when in a file but not following the keyword they are associated with.
      This is relatively minor because most programs don't have keywords as
      variables etc.
  
  WARNING: Some or all of this jEdit mode may be considered Datatel
  Confidential.
-->

<!DOCTYPE MODE SYSTEM "xmode.dtd">

<MODE>
    <PROPS>
        <PROPERTY NAME="doubleBracketIndent" VALUE="false" />
        <PROPERTY NAME="lineComment" VALUE="*" />
        <PROPERTY NAME="indentSize" VALUE="3" />
        <PROPERTY NAME="tabSize" VALUE="3" />
        <PROPERTY NAME="wrap" VALUE="soft" />
        <!-- Line length is 73 because line number markers in
             ELE and AE take up 7 spaces (80 - 7 = 73) -->
        <PROPERTY NAME="maxLineLen" VALUE="73" />
    </PROPS>
    <RULES NO_WORD_SEP="." IGNORE_CASE="FALSE" HIGHLIGHT_DIGITS="TRUE">
        <!-- whitespace: (space and tab) -->
        <WHITESPACE> </WHITESPACE>
        <WHITESPACE>	</WHITESPACE>

        <SPAN TYPE="LITERAL1" NO_LINE_BREAK="TRUE">
            <BEGIN>"</BEGIN>
            <END>"</END>
        </SPAN>
        <SPAN TYPE="LITERAL1" NO_LINE_BREAK="TRUE">
            <BEGIN>'</BEGIN>
            <END>'</END>
        </SPAN>

        <!-- UNIBASIC inserts -->
        <SPAN TYPE="KEYWORD1" NO_LINE_BREAK="TRUE" AT_WHITESPACE_END="TRUE">
            <BEGIN>:</BEGIN>
            <END>:</END>
        </SPAN>

        <EOL_SPAN TYPE="COMMENT1" AT_WHITESPACE_END="TRUE">*</EOL_SPAN>
        <EOL_SPAN TYPE="COMMENT1">;*</EOL_SPAN>
        <EOL_SPAN TYPE="COMMENT1">!</EOL_SPAN>
        <EOL_SPAN TYPE="COMMENT1" AT_WHITESPACE_END="TRUE">REM </EOL_SPAN>
        <EOL_SPAN TYPE="KEYWORD1">$INSERT</EOL_SPAN>

        <SEQ TYPE="OPERATOR">=</SEQ>
        <SEQ TYPE="OPERATOR">&gt;</SEQ>
        <SEQ TYPE="OPERATOR">&lt;</SEQ>
        
        <SEQ TYPE="OPERATOR">*</SEQ>

        <SEQ TYPE="OPERATOR">+</SEQ>
        <SEQ TYPE="OPERATOR">/</SEQ>
        <SEQ TYPE="OPERATOR">;</SEQ>
        <SEQ TYPE="OPERATOR">-</SEQ>

        <SEQ TYPE="OPERATOR">,</SEQ>
        <SEQ TYPE="NULL">)</SEQ>
        <SEQ TYPE="OPERATOR">]</SEQ>
        <SEQ TYPE="OPERATOR">[</SEQ>

        <MARK_FOLLOWING TYPE="KEYWORD1" EXCLUDE_MATCH="FALSE">FOR_</MARK_FOLLOWING>
        <MARK_FOLLOWING TYPE="KEYWORD1" EXCLUDE_MATCH="FALSE">END_</MARK_FOLLOWING>
        <MARK_FOLLOWING TYPE="KEYWORD1" EXCLUDE_MATCH="FALSE">$</MARK_FOLLOWING>
        <!-- For MIO calls, value marks etc. -->
        <MARK_FOLLOWING TYPE="KEYWORD2" EXCLUDE_MATCH="TRUE">@</MARK_FOLLOWING>

        <MARK_PREVIOUS TYPE="FUNCTION" EXCLUDE_MATCH="TRUE">(</MARK_PREVIOUS>
        <MARK_PREVIOUS TYPE="LABEL" AT_LINE_START="TRUE" EXCLUDE_MATCH="FALSE">:</MARK_PREVIOUS>

        <KEYWORDS IGNORE_CASE="FALSE">

            <!-- Keywords -->
            <!-- Repeated Keywords in constructs are commented out
                 but left in for completeness -->
